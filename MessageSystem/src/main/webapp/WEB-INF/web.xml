<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<display-name>Message System Login</display-name>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/spring-dbconfig.xml
			/WEB-INF/spring-security.xml
		</param-value>
	</context-param>

	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>*</url-pattern>
	</filter-mapping>

	<listener>
		<listener-class>com.nix.testtask.listeners.MessageSystemListener</listener-class>
	</listener>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>loginServlet</servlet-name>
		<servlet-class>com.nix.testtask.servlets.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>loaduserslistServlet</servlet-name>
		<servlet-class>com.nix.testtask.servlets.LoadUsersListServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>createServlet</servlet-name>
		<servlet-class>com.nix.testtask.servlets.CreateServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>modifyServlet</servlet-name>
		<servlet-class>com.nix.testtask.servlets.ModifyServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AnAndCrServlet</servlet-name>
		<servlet-class>com.nix.testtask.servlets.AnalysisAndCreateServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AnAndModServlet</servlet-name>
		<servlet-class>com.nix.testtask.servlets.AnalysisAndModifyServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>deleteUserServlet</servlet-name>
		<servlet-class>com.nix.testtask.servlets.DeleteUserServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>sendMessageServlet</servlet-name>
		<servlet-class>com.nix.testtask.servlets.SendMessageServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>analysisAndSendServlet</servlet-name>
		<servlet-class>com.nix.testtask.servlets.AnalysisAndSendServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>personalReceivedServlet</servlet-name>
		<servlet-class>com.nix.testtask.servlets.PersonalReceivedServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>personalSendedServlet</servlet-name>
		<servlet-class>com.nix.testtask.servlets.PersonalSendedServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>successSendServlet</servlet-name>
		<servlet-class>com.nix.testtask.servlets.SuccessSendServlet</servlet-class>
	</servlet>
	

	<servlet-mapping>
		<servlet-name>loginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>loaduserslistServlet</servlet-name>
		<url-pattern>/UsersList</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>createServlet</servlet-name>
		<url-pattern>/CreateUser</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>modifyServlet</servlet-name>
		<url-pattern>/ModifyUser</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AnAndCrServlet</servlet-name>
		<url-pattern>/UserCreate</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AnAndModServlet</servlet-name>
		<url-pattern>/UserModify</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>deleteUserServlet</servlet-name>
		<url-pattern>/DeleteUser</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>sendMessageServlet</servlet-name>
		<url-pattern>/SendMessage</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>analysisAndSendServlet</servlet-name>
		<url-pattern>/MessageSend</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>personalReceivedServlet</servlet-name>
		<url-pattern>/PersonalReceived</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>personalSendedServlet</servlet-name>
		<url-pattern>/PersonalSended</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>successSendServlet</servlet-name>
		<url-pattern>/SuccessSend</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
